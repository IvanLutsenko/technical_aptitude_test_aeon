<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Divider">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/paddingL</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="ErrorTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/paddingL</item>
        <item name="android:layout_marginTop">@dimen/paddingS</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/normalText</item>
        <item name="android:textAlignment">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/paddingXXXL</item>
        <item name="android:layout_marginVertical">@dimen/paddingM</item>
        <item name="android:enabled">true</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginHorizontal">@dimen/paddingXL</item>
        <item name="android:layout_marginVertical">@dimen/paddingXXXL</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="RootView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingHorizontal">@dimen/paddingM</item>
        <item name="android:background">@color/grey</item>
    </style>

    <style name="TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/normalText</item>
    </style>

    <style name="ValueTextViewNarrow" parent="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="ValueTextViewWide" parent="ValueTextViewNarrow">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="TitleTextView" parent="ValueTextViewNarrow">
        <item name="android:textStyle">bold</item>
    </style>
</resources>